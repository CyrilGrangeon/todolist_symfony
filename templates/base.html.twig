<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="{{asset('assets/scss/style.css')}}">
        <script defer src="{{asset('assets/js/burger.js')}}"></script>
        {% block stylesheets %}
            

        {% endblock %}

        {% block javascripts %}
            
        {% endblock %}
    </head>

    <body>
        <div class="topnav" id="myTopnav">
            
            {% if app.user %}
                <a href="{{ path('todolist') }}">Todolist</a>
                <a href="{{ path('todo-new') }}">Ajouter une chose à faire</a>
                <a href="{{ path('category-list') }}">Liste des categorie</a>
                <a href="{{ path('category-new') }}">Créer une categorie</a>
                <a href="{{ path('app_logout') }}">Deconnection</a>
                
            {% else %}
                <a href="javascript:void(0);" class="icon" onclick="burger()"></a>
                <a href="{{ path('home') }}">Accueil</a>
                <a href="{{ path('app_register') }}">Inscription</a>
                <a href="{{ path('app_login') }}">Connection</a>
                    <i class="fa fa-bars"></i>
                
        </div>
        {% endif %}

        {% block body %}{% endblock %}
    </body>
